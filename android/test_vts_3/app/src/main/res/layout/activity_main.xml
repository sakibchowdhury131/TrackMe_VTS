<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/animationTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track your Vehicle"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/blackPrimary"
        android:paddingBottom="40dp"/>

    <TextView
        android:id="@+id/animationTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anywhere on the world"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/blackSecondary"
        android:paddingBottom="40dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/animationcard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="#2E2B2B"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/getStartedID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#2E2B2B"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"/>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/animationcard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingTop="20dp"
        app:cardBackgroundColor="#E3E3E3"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/startSignInID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#E3E3E3"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="20dp"/>



    </androidx.cardview.widget.CardView>

</LinearLayout>